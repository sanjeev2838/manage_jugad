<div class="span9">
  <h1>
    Projects
  </h1>
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
      <th>
        Client
      </th>
      <th>
        Tasks
      </th>
      <th>
        Messages
      </th>
      <th>
        Files
      </th>
      <th>
        Progress
      </th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td>
      <%= link_to project.name,project_path(project) %>
      </td>
      <td>
        <%= project.description %>
      </td>
      <td>
        Monsters Inc
      </td>
      <td>
        <span class="badge">11</span>
      </td>
      <td>
        <span class="badge">2</span>
      </td>
      <td>
        <span class="badge">4</span>
      </td>
      <td>
        <div class="progress">
          <div class="bar" style="width: 60%;"></div>
        </div>
      </td>
    </tr>
    <%end%>
    </tbody>
  </table>
  <a class="toggle-link" href="#new-project" id="new_project_page"><i class="icon-plus"></i> New Project</a>
    <div id="new-project" class="form-horizontal hidden">
      <%= render :partial => "projects/form"%>
    </div>

</div>





