<div class="span8">
   <img style="height: 420px" src="/..//assets/project_management.png">
</div>
<div class="span4">
<h2>Create an account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="control-group">
    <div class="controls">
        <input type="text" class="input-xlarge" placeholder="Enter Your Name"/>
    </div>
</div>
<div class="control-group">

    <div class="controls">
        <%= f.text_field :email ,:autofocus=>true,:class=>"input-xlarge" ,:id=>"input01",:placeholder=>"Enter Email"%>
    </div>
</div>

<div class="control-group">

    <div class="controls">
        <%= f.password_field :password,:class=>"input-xlarge" ,:id=>"input01",:placeholder=>"Enter Password"%>
     </div>
</div>

<div class="control-group">

    <div class="controls">
        <%= f.password_field :password_confirmation ,:class=>"input-xlarge" ,:id=>"input01",:placeholder=>"Enter confirm Password"%>
    </div>
</div>

<div class="form-controls-sign-up">
    <button type="submit"  class="btn btn-lg btn-primary btn-block">Sign up</button>
</div>

<% end %>

</div>