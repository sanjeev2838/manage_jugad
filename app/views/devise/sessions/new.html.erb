<div class="span9 form-horizontal">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

 <div class="control-group">
    <%= f.label :email, :class=>"control-label",:for=>"input01" %>
    <div class="controls">
        <%= f.text_field :email ,:autofocus=>true,:class=>"input-xlarge" ,:id=>"input01"%>
    </div>
 </div>

 <div class="control-group">
    <%= f.label :password, :class=>"control-label",:for=>"input01" %>
    <div class="controls">
       <%= f.password_field :password ,:class=>"input-xlarge" ,:id=>"input01"%>
    </div>
 </div>

<div class="control-group">
  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me,:class=>"control-label" ,:for=>"input01"%>
    <div class="controls">
      <%= f.check_box :remember_me,:class=>"input-xlarge", :id=>"input01"%>
    </div>
  <% end -%>
</div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
<% end %>

<%= render "devise/shared/links" %>
</div>